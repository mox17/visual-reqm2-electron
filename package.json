{
  "name": "visualreqm2",
  "version": "0.99.3",
  "description": "Visual ReqM2 - oreqm file viewer.",
  "main": "mainwin.js",
  "scripts": {
    "start": "electron .",
    "start_w_args": "babel scripts -d lib && electron . ./testdata/oreqm_testdata_del_movement.oreqm",
    "start_w_args_1": "babel scripts -d lib && electron . --debug  ./testdata/oreqm_testdata_del_movement.oreqm",
    "start_w_args_2": "electron . --debug ./testdata/oreqm_testdata_del_movement.oreqm ./testdata/oreqm_testdata_no_ogre.oreqm",
    "start_w_h": "electron . -h",
    "build": "babel scripts -d lib",
    "dev": "electron . --debug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "win": "babel scripts -d lib && electron-builder -w",
    "linux": "babel scripts -d lib && electron-builder -l",
    "mac": "electron-builder -m"
  },
  "author": {
    "name": "Erling Stage",
    "email": "erling.stage@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mox17/visual-reqm2-electron.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "electron": "^9.0.0",
    "electron-builder": "^20.44.4",
    "electron-icon-maker": "0.0.5"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "blob-util": "^2.0.2",
    "diff": "^4.0.2",
    "electron-settings": "^3.2.0",
    "split.js": "^1.6.2",
    "svg-pan-zoom": "^3.6.0",
    "viz.js": "^1.8.2"
  },
  "build": {
    "appId": "com.mox17.visualreqm2",
    "productName": "Visual ReqM2",
    "extraFiles": [
      "src/icons/**",
      "build/**/*"
    ],
    "fileAssociations": [
      {
        "ext": "oreqm",
        "name": "OREQM File",
        "role": "Viewer",
        "mimeType": "application/oreqm+xml"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Erling Stage",
      "icon": "build/icon.png"
    },
    "linux": {
      "category": "Utility",
      "description": "Visual ReqM2 is an unofficial app to visualize requirement relationships.",
      "synopsis": "ReqM2 requirements viewer",
      "desktop": {

      },
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/img/ico.png"
    }
  }
}
